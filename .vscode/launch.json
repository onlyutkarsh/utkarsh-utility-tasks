{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug share.js",
            "program": "${workspaceRoot}/scripts/share.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Launch secrets for strings task",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/tasks/secrets-for-strings/secrets-for-stringsV1/index.ts",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceFolder}/tasks/secrets-for-strings/",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development",
                "INPUT_names" : "sql.password;user.key,temp;dummy\nNewOne\r\nAnother",
                "INPUT_length": "14.6",
                "INPUT_useSpecialChars" : "true",
                "INPUT_useNumbers" : "true",
                "INPUT_exclude": "./*[]{}%",
                "SYSTEM_DEBUG": "true"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/tasks/secrets-for-strings/secrets-for-stringsV1/index.js"
            ]
        },
        {
            "name": "Publish Secrets to KV",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/tasks/publish-secrets-to-kv/publish-secrets-to-kvV1/index.ts",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceFolder}/tasks/publish-secrets-to-kv/",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development",
                "INPUT_ConnectedServiceName": "ConnectedServiceName",
                "INPUT_secrets" : "sqlpassword=1234\nuserkey=4567",
                "INPUT_tags" : "",
                "INPUT_KeyVaultName": "mykv",
                "ENDPOINT_URL_ConnectedServiceName": "https://management.azure.com/",
                "ENDPOINT_AUTH_PARAMETER_ConnectedServiceName_TENANTID": "<<your-tenant-id>>",
                "ENDPOINT_AUTH_PARAMETER_ConnectedServiceName_SERVICEPRINCIPALID": "<<your-app-client-id>>",
                "ENDPOINT_AUTH_PARAMETER_ConnectedServiceName_SERVICEPRINCIPALKEY": "<<your-app-secret>>",
                "ENDPOINT_DATA_ConnectedServiceName_SUBSCRIPTIONID": "<<your-subscription-id>>",
                "ENDPOINT_DATA_ConnectedServiceName_AZUREKEYVAULTDNSSUFFIX": "vault.azure.net",
                "INPUT_length": "14.6",
                "INPUT_useSpecialChars" : "true",
                "INPUT_useNumbers" : "true",
                "INPUT_exclude": "./*[]{}%",
                "SYSTEM_DEBUG": "true"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/tasks/publish-secrets-to-kv/publish-secrets-to-kvV1/index.js"
            ]
        }
    ]
}